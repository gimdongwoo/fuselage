{
  "name": "@rocket.chat/fuselage-toastbar",
  "version": "0.31.25",
  "description": "Fuselage ToastBar component",
  "keywords": [
    "rocketchat",
    "rocketchat-fuselage",
    "fuselage",
    "toastbar",
    "fuselage-toastbar"
  ],
  "author": {
    "name": "Rocket.Chat",
    "url": "https://rocket.chat/"
  },
  "homepage": "https://github.com/RocketChat/fuselage#readme",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RocketChat/fuselage.git",
    "directory": "packages/fuselage-toastbar"
  },
  "bugs": {
    "url": "https://github.com/RocketChat/fuselage/issues"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "run-s .:build:clean .:build:esm .:build:cjs",
    ".:build:clean": "rimraf dist",
    ".:build:esm": "tsc -p tsconfig-esm.json",
    ".:build:cjs": "tsc -p tsconfig-cjs.json",
    "lint": "lint",
    "lint-and-fix": "lint-and-fix",
    "lint-staged": "lint-staged",
    "test": "jest --runInBand",
    "docs": "typedoc",
    "storybook": "storybook dev -p 6006 --no-version-updates",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "~7.18.6",
    "@babel/plugin-proposal-private-methods": "~7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "~7.21.11",
    "@rocket.chat/eslint-config-alt": "workspace:~",
    "@rocket.chat/fuselage": "workspace:~",
    "@rocket.chat/fuselage-hooks": "workspace:~",
    "@rocket.chat/fuselage-polyfills": "workspace:~",
    "@rocket.chat/layout": "workspace:~",
    "@rocket.chat/prettier-config": "workspace:~",
    "@rocket.chat/styled": "workspace:~",
    "@storybook/addon-essentials": "~7.6.7",
    "@storybook/addons": "~7.6.7",
    "@storybook/react": "~7.6.7",
    "@storybook/react-webpack5": "~7.6.7",
    "@storybook/theming": "~7.6.7",
    "@types/jest": "~29.5.11",
    "@types/react": "~17.0.74",
    "@types/react-dom": "~17.0.25",
    "eslint": "~8.56.0",
    "eslint-plugin-storybook": "~0.6.15",
    "jest": "~29.7.0",
    "lint-all": "workspace:~",
    "lint-staged": "~15.2.0",
    "npm-run-all": "~4.1.5",
    "prettier": "~3.1.1",
    "react": "~17.0.2",
    "react-dom": "~17.0.2",
    "rimraf": "~5.0.5",
    "storybook": "~7.6.7",
    "storybook-dark-mode": "~3.0.3",
    "ts-jest": "~29.1.1",
    "typedoc": "~0.25.7",
    "typescript": "~5.3.3"
  },
  "peerDependencies": {
    "@rocket.chat/fuselage": "*",
    "@rocket.chat/fuselage-hooks": "*",
    "@rocket.chat/fuselage-polyfills": "*",
    "@rocket.chat/styled": "*",
    "react": "~17.0.2",
    "react-dom": "~17.0.2"
  },
  "eslintConfig": {
    "extends": "@rocket.chat/eslint-config-alt/typescript",
    "env": {
      "jest": true
    }
  },
  "prettier": "@rocket.chat/prettier-config/fuselage",
  "jest": {
    "preset": "ts-jest",
    "errorOnDeprecated": true,
    "testMatch": [
      "<rootDir>/src/**/*.spec.[jt]s?(x)"
    ],
    "testEnvironment": "jsdom"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
